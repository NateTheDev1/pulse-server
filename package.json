{
  "name": "pulse-server",
  "version": "0.2.0",
  "description": "Pulse Server Package For Node.js",
  "main": "dist/index.js",
  "files": [
    "dist/**/*"
  ],
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && cp -r ./src/admin/dashboard ./dist/admin/dashboard",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "test": "jest --config jestconfig.json"
  },
  "keywords": [
    "Pulse Server",
    "Server Framework",
    "Node.js",
    "TypeScript"
  ],
  "author": "Nathaniel Richards",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/NateTheDev1/pulse-server.git"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/nedb": "^1.8.13",
    "@types/node": "^20.4.7",
    "@types/ws": "^8.5.5",
    "jest": "^29.6.2",
    "prettier": "^3.0.1",
    "ts-jest": "^29.1.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "jsonwebtoken": "^9.0.1",
    "log4js": "^6.9.1",
    "nedb": "^1.8.0",
    "toml": "^3.0.0",
    "ws": "^8.13.0"
  }
}
